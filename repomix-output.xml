                            <div className="flex items-center space-x-4">
                                <Avatar
                                    src={user.avatar}
                                    fallback={user.name}
                                    size="lg"
                                    status={user.status}
                                    showStatus={showStatus}
                                />
                                <div className="flex-1">
                                    <div className="font-semibold text-text-on-light dark:text-text-on-dark text-base">{user.name}</div>
