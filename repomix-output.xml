            VILLA: { label: 'Villa', icon: 'Home' },
            COMMERCIAL: { label: 'Ticari', icon: 'Store' },
            OFFICE: { label: 'Ofis', icon: 'Briefcase' },
        };
        return typeConfig[type] || { label: type, icon: 'Building' };
    }

