        switch (status.color) {
            case 'green':
                return 'success';
            case 'yellow':
                return 'warning';
            case 'red':
                return 'danger';
            default:
                return 'secondary';
        }
    };

    const getTypeColor = (type: ResidentType) => {
        switch (type.color) {
            case 'blue':
                return 'primary';
            case 'green':
                return 'success';
            case 'purple':
                return 'accent';
            default:
                return 'secondary';
        }
