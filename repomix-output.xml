  const formatCurrency = (amount: number, currency: string) => {
    return new Intl.NumberFormat('tr-TR', {
      style: 'currency',
      currency: currency === 'IQD' ? 'USD' : currency, // Fallback for IQD
      minimumFractionDigits: 0,
      maximumFractionDigits: 0,
