    const refetch = useCallback(async () => {
        await Promise.all([
            loadUnits(),
            loadQuickStats(),
            loadRecentActivities()
        ]);
    }, [loadUnits, loadQuickStats, loadRecentActivities]);

    const updateUnit = useCallback(async (id: string, data: Partial<Property>) => {
        try {
