            ))}
        </div>

        {/* Rows */}
        {Array.from({ length: rows }, (_, rowIndex) => (
            <div key={rowIndex} className="grid gap-4" style={{ gridTemplateColumns: `repeat(${columns}, 1fr)` }}>
                {Array.from({ length: columns }, (_, colIndex) => (
                    <Skeleton
                        key={colIndex}
                        variant="text"
                        height={14}
                        animated={animated}
                        className="w-full"
                    />
                ))}
            </div>
        ))}
    </div>
