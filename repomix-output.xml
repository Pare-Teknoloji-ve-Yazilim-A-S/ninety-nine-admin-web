    const apiAction = actionMap[action];
    if (!apiAction) return;
    await handleModalAction({
      action: apiAction,
      onClose,
      onActionComplete,
      toast: toast!,
      label,
      setLoading: (loading) => setLoadingAction(loading ? action : null),
    });
