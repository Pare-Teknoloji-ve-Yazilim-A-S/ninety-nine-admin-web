            this.logger.info('Fetched property statistics successfully');
            return response;
        } catch (error) {
            this.logger.error('Failed to fetch property statistics', error);
            throw error;
        }
    }

    /**
     * Get occupancy statistics
     * GET /admin/properties/occupancy-stats (Future Endpoint)
     */
