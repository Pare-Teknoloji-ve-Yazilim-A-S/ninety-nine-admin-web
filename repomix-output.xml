}) => (
    <div className={cn('space-y-3', className)}>
        {/* Header */}
        <div className="grid gap-4" style={{ gridTemplateColumns: `repeat(${columns}, 1fr)` }}>
            {Array.from({ length: columns }, (_, index) => (
                <Skeleton
                    key={index}
                    variant="text"
                    height={16}
                    animated={animated}
