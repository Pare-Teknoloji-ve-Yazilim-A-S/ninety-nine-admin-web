            ? [{
                id: 'json',
                label: 'JSON Ä°ndir',
                icon: Code,
                description: 'Sakin listesini JSON formatÄ±nda indir',
                format: 'json' as const,
                onClick: async () => {
                    setLoadingOption('json');
                    await onExportJSON();
                    setLoadingOption(null);
                    setIsOpen(false);
                }
            }]
            : []),
    ];

    // Size classes
    const sizeClasses = {
        sm: 'px-3 py-1.5 text-sm',
        md: 'px-4 py-2 text-sm',
        lg: 'px-5 py-2.5 text-base'
